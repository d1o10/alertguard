<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlertGuard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/DashboardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="60dp"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/Woman"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:src="@drawable/woman"
        />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:background="@drawable/safehouse"
        android:backgroundTintMode="multiply" />

    <TextView
        android:id="@+id/houseSafeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your house is safe"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_below="@id/imageIcon"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
  />

    <TextView
        android:id="@+id/noFireDetected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No fire/smoke detected"
        android:textSize="25dp"
        android:layout_below="@id/houseSafeText"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>





