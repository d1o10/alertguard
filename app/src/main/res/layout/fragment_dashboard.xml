<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlertGuard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ff5757"
            android:layout_gravity="end">

            <ImageView
                android:id="@+id/Woman"
                android:layout_width="40dp"
                android:layout_marginTop="15dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/alertText"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="300dp"
                android:src="@drawable/woman"
                />
        </LinearLayout>



        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/loggn"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/alertText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlertGuard"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:paddingStart="1dp"
            android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/imageIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:background="@drawable/shield"
        android:backgroundTintMode="multiply" />

    <TextView
        android:id="@+id/houseSafeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your house is safe"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_below="@id/imageIcon"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
  />

    <TextView
        android:id="@+id/noFireDetected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No fire/smoke detected"
        android:textSize="25dp"
        android:layout_below="@id/houseSafeText"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    </RelativeLayout>
</FrameLayout>