<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Settings"
    >

    <Button
        android:id="@+id/backbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transpa"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginTop="50dp"
        android:paddingLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_marginStart="70dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:layout_marginStart="70dp"
        />

    <Button
        android:id="@+id/editprofilebtn"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:textColorHint="@color/black"
        android:textSize="18sp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/profile"
        android:layout_gravity="center"
        android:background="@color/transpa"
        android:clickable="true"
        android:onClick="onTextViewClicked"
        android:drawableRight="@drawable/baseline_chevron_right_24"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="235dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable Notifications"
            android:textColor="@color/black"
            android:color="@color/black"
            android:textSize="20sp"
            android:paddingTop="15dp"
            android:layout_marginStart="10dp"/>

        <Switch
            android:id="@+id/enablenotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="290dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/enableloca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:color="@color/black"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:text="Enable Location"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />

        <Switch
            android:id="@+id/sms_notifications_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp" />
    </LinearLayout>




</RelativeLayout>