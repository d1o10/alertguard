<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlertGuard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FireDetected">


    <TextView
        android:id="@+id/DashboardText"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="40dp"
        android:text="Dashboard"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="131dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="60dp"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/WomanFireDect"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/welcomeText"
        android:src="@drawable/woman" />

    <ImageView
        android:id="@+id/SafeHouse"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/smart"
        android:backgroundTintMode="multiply" />
    <TextView
        android:id="@+id/houseSafeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fire Detected on your house"
        android:textColor="@color/red"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        android:layout_marginTop="380dp"/>

    <Button
        android:id="@+id/emergency"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#ff5757"
        android:layout_below="@+id/houseSafeText"
        android:hint="Emergency Contacts"
        android:textColorHint="@color/white" />


    <Button
        android:id="@+id/dismiss"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="#ff5757"
        android:layout_below="@+id/houseSafeText"
        android:layout_toRightOf="@+id/emergency"
        android:hint="Dismiss Alert"
        android:textColorHint="@color/white" />

    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/button3">

        <Button

            android:id="@+id/homeIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transpa"
            android:clickable="true"
            android:drawableTop="@drawable/ic_home"
            android:onClick="onTextViewClicked" />

        <Button
            android:id="@+id/locationIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transpa"
            android:clickable="true"
            android:drawableTop="@drawable/ic_loc"
            android:onClick="onTextViewClicked"/>


        <Button
            android:id="@+id/notificationIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transpa"
            android:clickable="true"
            android:drawableTop="@drawable/baseline_doorbell_24"
            android:onClick="onTextViewClicked" />
        <Button
            android:id="@+id/profileIcon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transpa"
            android:clickable="true"
            android:drawableTop="@drawable/profile"
            android:onClick="onTextViewClicked" />



    </LinearLayout>
    /



</RelativeLayout>